{
    "manifest_version": 3,
    "name": "LecBuddy",
    "description": "This extension, LecBuddy, is designed to summarise key topics/points from a given Panopto lecture.",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "window.html"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "cookies",
        "storage"
    ],
    "host_permissions": [
        "https://mediaweb.ap.panopto.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.panopto.com/*"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": false
        }
    ]
}