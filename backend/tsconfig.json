{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true, // Safety for array access
    "forceConsistentCasingInFileNames": true,
    /* Interop & Libraries */
    "esModuleInterop": true,
    "skipLibCheck": true, // Speeds up compilation by skipping node_modules checks
    "resolveJsonModule": true, // Allows: import data from './data.json'
    /* Debugging */
    "sourceMap": true, // Allows you to debug the .ts file in VS Code
    "declaration": true // Generates .d.ts files (useful for shared libraries)
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}